<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Menu - Restoran</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            padding: 20px;
            background-color: #f8f8f8;
        }
        h1 {
            color: #333;
        }
        .menu-item {
            border-bottom: 1px solid #ccc;
            padding: 10px 0;
        }
        .item-name {
            font-weight: bold;
            font-size: 1.2em;
        }
        .item-description {
            color: #555;
        }
        .item-price {
            color: #007BFF;
            font-weight: bold;
        }
    </style>
</head>
<body>

    <h1>Menu Restoran Kami</h1>
    
    <div id="menu-list">Memuat menu...</div>

    <script>
        // Simulasi fetch data JSON dari server
        const fetchMenu = async () => {
            // Simulasi respon JSON
            const response = [
                {
                    name: "Nasi Goreng Spesial",
                    description: "Nasi goreng dengan ayam, udang, dan sayuran.",
                    price: "Rp 45.000"
                },
                {
                    name: "Sate Ayam",
                    description: "Sate ayam dengan bumbu kacang yang lezat.",
                    price: "Rp 30.000"
                },
                {
                    name: "Mie Goreng",
                    description: "Mie goreng dengan sayuran dan telur.",
                    price: "Rp 40.000"
                },
                {
                    name: "Ayam Penyet",
                    description: "Ayam goreng yang disajikan dengan sambal dan tempe.",
                    price: "Rp 50.000"
                },
                {
                    name: "Es Teh Manis",
                    description: "Minuman es teh manis yang segar.",
                    price: "Rp 10.000"
                }
            ];

            return new Promise((resolve) => {
                setTimeout(() => resolve(response), 1000); // Simulasi delay
            });
        };

        // Menampilkan menu di halaman
        const displayMenu = async () => {
            const menuItems = await fetchMenu();
            const menuList = document.getElementById('menu-list');
            menuList.innerHTML = ''; // Kosongkan teks loading

            menuItems.forEach(item => {
                const itemDiv = document.createElement('div');
                itemDiv.className = 'menu-item';
                itemDiv.innerHTML = `
                    <div class="item-name">${item.name}</div>
                    <div class="item-description">${item.description}</div>
                    <div class="item-price">${item.price}</div>
                `;
                menuList.appendChild(itemDiv);
            });
        };

        displayMenu(); // Memanggil fungsi untuk menampilkan menu
    </script>

</body>
</html>
